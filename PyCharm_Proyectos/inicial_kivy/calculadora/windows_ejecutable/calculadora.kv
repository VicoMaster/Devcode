#:kivy 1.0
#:import C kivy.utils.get_color_from_hex
#: set COLORHEX_FONDO_BT C("E1E1E1")
#: set COLORHEX_FONDO_BT_BORD C("B2B2B2")
<BotonGenerico@Button>:
    font_size: "30sp"
    background_color: 0, 0, 0, 0
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: COLORHEX_FONDO_BT if self.state=='normal' else COLORHEX_FONDO_BT_BORD
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]

<BoxGenerico@BoxLayout>:
    spacing: "7sp"


<VentanaInicial@GridLayout>:
    display: ti_entrada
    rows: 6
    padding: "10sp"
    spacing: "10sp"

    ScrollView:
        id: sc_entrada
        spacing: "7sp"
        TextInput:
            id: ti_entrada
            font_size: "50sp"
            multiline: True
            readonly: True
            size_hint: 1, None
            height: max(self.minimum_height, sc_entrada.height)
    BoxGenerico:
        BotonGenerico:
            text: "7"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "8"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "9"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "+"
            on_press: ti_entrada.text += self.text
    BoxGenerico:
        BotonGenerico:
            text: "4"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "5"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "6"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "-"
            on_press: ti_entrada.text += self.text
    BoxGenerico:
        BotonGenerico:
            text: "1"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "2"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "3"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "*"
            on_press: ti_entrada.text += self.text
    BoxGenerico:
        BotonGenerico:
            text: "AC"
            on_press: ti_entrada.text = ""
        BotonGenerico:
            text: "0"
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            text: "="
            on_press: root.calcular(ti_entrada.text)
        BotonGenerico:
            text: "/"
            on_press: ti_entrada.text += self.text
    BoxGenerico:
        BotonGenerico:
            text: "C"
            on_press: root.borrar_c(ti_entrada.text)
        BotonGenerico:
            text: "."
            on_press: ti_entrada.text += self.text
        BotonGenerico:
            opacity: 0
        BotonGenerico:
            opacity: 0
