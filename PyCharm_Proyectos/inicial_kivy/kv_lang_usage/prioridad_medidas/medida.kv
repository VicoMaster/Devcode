# <RootWidget@FloatLayout>  para extender de FloatLayout
<RootWidget>: # Definimos nueva clase en Kivy que sera el contenedor de los componentes
# En pixeles
    Button:
        size_hint: None, None # Porcentual
        size: 350, 50
        x: 100
        y: 350
        text: "PX"
# En DP
    Button:
        size_hint: None, None
        size: dp(350), dp(50)
        pos: dp(100), dp(270)
        text: "DP"
# Porcentaje de medida - Porcentual
    Button:
        size_hint: .5, .09
        pos_hint: {"x": .1, "y": .1} # 10%
        text: "%"
